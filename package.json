{
  "name": "@swan-io/chicane",
  "version": "1.3.3",
  "license": "MIT",
  "description": "A simple and safe router for React and TypeScript",
  "author": "Mathieu Acthernoene <mathieu.acthernoene@swan.io>",
  "homepage": "https://swan-io.github.io/chicane",
  "repository": {
    "type": "git",
    "url": "https://github.com/swan-io/chicane.git"
  },
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "hook",
    "react",
    "router",
    "typescript"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "yarn clean && microbundle -f cjs,es",
    "clean": "rm -rf dist",
    "dev": "microbundle watch",
    "format": "prettier '**/*' -u -w",
    "lint": "eslint --ext ts,tsx ./src",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit && tsc --noEmit __tests__/types.ts",
    "prepack": "yarn typecheck && yarn lint && yarn test && yarn build"
  },
  "browserslist": [
    ">0.2%",
    "not op_mini all",
    "not dead"
  ],
  "prettier": {
    "trailingComma": "all"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "dependencies": {
    "@emotion/hash": "^0.9.0",
    "history": "^5.3.0",
    "use-sync-external-store": "^1.2.0"
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.5",
    "@types/react": "^17.0.53",
    "@types/react-dom": "^17.0.18",
    "@types/use-sync-external-store": "^0.0.3",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "^8.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^21.1.0",
    "microbundle": "^0.15.1",
    "prettier": "^2.8.4",
    "prettier-plugin-organize-imports": "^3.2.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.9.5",
    "vitest": "^0.28.5"
  }
}
